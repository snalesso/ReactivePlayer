            <ColumnDefinition Width="Auto" />-->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--<ListBox ItemsSource="{Binding PlaylistViewModels}" SelectedItem="{Binding SelectedTracksFilterViewModel}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>-->

        <GridSplitter
            Grid.Column="1"
            Width="8"
            Background="Transparent"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Columns" />

        <Views:TracksView Grid.Column="2" />

    </Grid>
</UserControl>