<Window
    x:Class="ReactivePlayer.UI.WPF.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:DesignTimeViewModels="clr-namespace:ReactivePlayer.UI.WPF.ViewModels.DesignTime"
    xmlns:Views="clr-namespace:ReactivePlayer.UI.WPF.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="680"
    d:DesignHeight="250"
    d:DataContext="{d:DesignInstance Type=DesignTimeViewModels:DesignTimeShellViewModel,
                                     IsDesignTimeCreatable=False}"
    IsEnabled="{Binding IsUIEnabled, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
    mc:Ignorable="d">

    <Window.InputBindings>
        <KeyBinding Key="Space" Command="{Binding PlaybackControlsViewModel.Resume}" />
        <KeyBinding Key="Space" Command="{Binding PlaybackControlsViewModel.Pause}" />
        <KeyBinding
            Key="Space"
            Command="{Binding PlaybackControlsViewModel.Stop}"
            Modifiers="Alt" />
    </Window.InputBindings>

    <!--<Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="taskBarItemInfo1"
                         Description="ReactivePlayer afejifjawpefjwaiej">
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfoCollection>
                    <ThumbButtonInfo Command="{Binding PlaybackControlsViewModel.Pause}"
                                     Description="Play"
                                     DismissWhenClicked="False"
                                     Visibility="{Binding PlaybackControlsViewModel.CanPause}" />
                    <ThumbButtonInfo Command="{Binding PlaybackControlsViewModel.Stop}"
                                     Description="Stop" />
                </ThumbButtonInfoCollection>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" MinWidth="220" />
            </Grid.ColumnDefinitions>

            <Views:TracksView DataContext="{Binding TracksViewModel}" />
            <Views:PlaybackHistoryView Grid.Column="2" DataContext="{Binding PlaybackHistoryViewModel}" />

        </Grid>

        <Views:PlaybackControlsView Grid.Row="1" DataContext="{Binding PlaybackControlsViewModel}" />

    </Grid>

</Window>