<UserControl
    x:Class="ReactivePlayer.UI.WPF.Views.PlaybackControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:Daedalus.UI.Converters;assembly=Daedalus.UI"
    xmlns:DesignTimeViewModels="clr-namespace:ReactivePlayer.UI.WPF.ViewModels.DesignTime"
    xmlns:Views="clr-namespace:ReactivePlayer.UI.WPF.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=DesignTimeViewModels:DesignTimePlaybackControlsViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignWidth="550"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Converters:BooleanToVisibilityInverter x:Key="BooleanToVisibilityInverter" />
        <Converters:NullableTimeSpanToStringConverter x:Key="NullableTimeSpanToStringConverter" />
        <Converters:BooleanInverter x:Key="BooleanInverter" />
        <!--<Converters:MultiBooleanAnyToVisibilityConverter x:Key="MultiBooleanAnyToVisibilityConverter" />-->
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="8" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="1"
            Grid.Column="1"
            IsEnabled="{Binding IsPositionKnown}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding Position, Converter={StaticResource NullableTimeSpanToStringConverter}, Mode=OneWay, TargetNullValue=--:--}" />
            <Slider
                x:Name="PlaybackPositionSlider"
                Grid.Column="2"
                VerticalAlignment="Center"
                IsEnabled="False"
                IsMoveToPointEnabled="True"
                Maximum="{Binding DurationAsTicks}"
                Minimum="0"
                TickFrequency="1"
                Value="{Binding PositionAsTicks, Mode=OneWay}" />
            <ProgressBar
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsIndeterminate="True"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBlock
                Grid.Column="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding Duration, Converter={StaticResource NullableTimeSpanToStringConverter}, TargetNullValue=--:--}" />

        </Grid>

        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding PlayPrevious, Mode=OneWay}"
                Content="Prev" Visibility="Collapsed" />
            <StackPanel
                Grid.Column="2"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    VerticalAlignment="Center"
                    Command="{Binding Pause, Mode=OneWay}"
                    Content="Pause"
                    Visibility="{Binding CanPause, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button
                    VerticalAlignment="Center"
                    Command="{Binding Resume, Mode=OneWay}"
                    Content="Resume"
                    Visibility="{Binding CanResume, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
            <Button
                Grid.Column="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding Stop, Mode=OneWay}"
                Content="Stop" />
            <Button
                Grid.Column="6"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding PlayNext, Mode=OneWay}"
                Content="Next" Visibility="Collapsed" />

            <Slider
                Grid.Column="8"
                Width="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Maximum="1"
                Minimum="0"
                Value="{Binding Volume}" />

            <TextBlock
                Grid.Column="10"
                VerticalAlignment="Center"
                Text="{Binding Title}" />

        </Grid>

    </Grid>

</UserControl>